<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="52dp"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="#43AC43" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#43AC43" >

            <ImageButton
                android:id="@+id/ib_choosearea_title_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:background="@drawable/back_index" />

            <TextView
                android:id="@+id/tv_choosearea_title_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/ib_choosearea_title_left"
                android:text="返回"
                android:textColor="#fff"
                android:textSize="20dp" />
        </RelativeLayout>

        <Button
            android:id="@+id/btn_choosearea_title_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="#43AC43"
            android:layout_alignParentRight="true"
            android:paddingRight="8dp"
            android:textColor="#fff"
            android:textSize="16dp" />
    </RelativeLayout>

</LinearLayout>