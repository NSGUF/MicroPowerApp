<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     >
          <RelativeLayout
        android:id="@+id/share_layout_titlebar"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="#43AC43">

         <ImageView
             android:id="@+id/share_image_back"
             android:layout_width="60dp"
             android:layout_height="60dp"
             android:layout_alignParentLeft="true"
             android:layout_centerVertical="true"
             android:layout_margin="5dp"
             android:paddingLeft="5dp"
             android:onClick="backonClick"
             android:src="@drawable/launch_title_back" />

         <TextView
             android:id="@+id/share_title_tv"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="20dp"
             android:layout_margin="5dp"
             android:paddingRight="5dp"
             android:typeface="serif"
             android:textColor="#FFFFFF"
             android:layout_alignParentRight="true"
             android:layout_centerVertical="true"
             android:text="分享助力" />

         </RelativeLayout>

           <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:focusable="true"  
   android:focusableInTouchMode="true"
        >

        <EditText
            android:id="@+id/share_edit_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:paddingLeft="9dp"
            android:singleLine="true" />

                        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#E6E6E6" />
                <ScrollView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scrollbarStyle="outsideOverlay" >
        <EditText
            android:id="@+id/share_edit_context"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:paddingLeft="9dp"
            android:layout_marginTop="10dp"
            android:gravity="top"
            android:minLines="10" />
        </ScrollView>
        <TextView 
                android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" 
        android:layout_marginLeft="10dp" 
        android:layout_marginBottom="10dp" 
        android:textColor="#C4C4C4"
        android:text="上传图片"   
        android:textSize="13dp"
            />
            <GridView 
        android:id="@+id/share_gridview"
        android:layout_width="290dp"
        android:layout_height="350dp"
        android:layout_marginLeft="5dp"
        android:horizontalSpacing="3dp"        
        android:numColumns="4"
        android:scrollbars="none"
        android:verticalSpacing="5dp" >
    </GridView>
    </LinearLayout>

</LinearLayout>
